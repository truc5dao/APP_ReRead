<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_marginStart="210dp">

    <!-- Genre Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_genre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins"
            android:text="@string/titleGenre"
            android:textColor="@color/green"
            android:textSize="17sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/chkGenreEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/green"
        android:fontFamily="@font/poppins"
        android:paddingStart="10dp"
        android:text="Education"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/chkGenreLiterature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Literature"
        android:textSize="16sp"
        android:buttonTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/poppins"/>

    <CheckBox
        android:id="@+id/chkGenreTextbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Textbook"
        android:textSize="16sp"
        android:buttonTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/poppins"/>

    <CheckBox
        android:id="@+id/chkGenreScience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textSize="16sp"
        android:buttonTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/poppins"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:fontFamily="@font/poppins"
            android:textSize="17dp"
            android:text="@string/titleShowMore"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/txtProductDiscription"/>
        <ImageView
            android:id="@+id/imgShowMoreDiscription"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_showmore"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/textView3"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#EEEEEE" />

    <!-- Language Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_language"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chkLanguageVietnamese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vietnamese"
        android:textSize="16sp"
        android:buttonTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/poppins"/>

    <CheckBox
        android:id="@+id/chkLanguageEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English"
        android:textSize="16sp"
        android:buttonTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/poppins"/>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyFilter"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Apply"
        app:cornerRadius="0dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_bold"/>
</LinearLayout>
