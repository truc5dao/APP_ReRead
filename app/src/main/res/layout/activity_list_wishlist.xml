<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".k22411creread.ListWishlistActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A7B41">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="32dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="89dp"
                android:layout_height="17dp"
                app:srcCompat="@drawable/Logo"
                android:layout_margin="15dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_back"
                    android:layout_marginTop="5dp"/>

                <SearchView
                    android:id="@+id/searchBar"
                    android:layout_width="214dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:iconifiedByDefault="false"
                    android:searchIcon="@drawable/ic_search"
                    android:background="@drawable/bg_search_view">
                </SearchView>

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_3_fill"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_profile"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:background="#F2EDDA">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_btn_create_wishlist"
            app:cornerRadius="10dp"
            android:textColor="#000"
            android:backgroundTint="#FFFF"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="15dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3B9567"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_wishlish_you_may_like"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14dp"
                android:textColor="#0A7B41"
                android:layout_gravity="center"
                android:layout_margin="8dp"/>

        </androidx.cardview.widget.CardView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>