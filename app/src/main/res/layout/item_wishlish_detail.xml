<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp">

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/product_photo" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="text"
            android:text="Trung Thanh Duy Ai"
            android:textColor="#391319"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_bold"
                android:inputType="text"
                android:text="75,00$"
                android:textColor="#C92127"
                android:textSize="18dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#C92127">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C92127"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:inputType="text"
                    android:text="-30%"
                    android:textColor="#FDFDFD"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_margin="2dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="50,00$"
            android:textColor="#A8A8A9"
            android:fontFamily="@font/poppins"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bin" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/ic_cart_green" />
    </LinearLayout>

</LinearLayout>