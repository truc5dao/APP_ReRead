<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".k22411creread.ManageAccountActivity"
    android:background="#ffffff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A7B41">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="32dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="89dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                app:srcCompat="@drawable/ic_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Icon bên trái -->
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_back" />

                <!-- View trống để đẩy icon bên phải về cuối -->
                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/title_cart"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Icon bên phải -->
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_cart" />
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/title_full_name"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/edtFullname"
                    android:layout_width="181dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_password_field"
                    android:hint="Erik Le"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:textColorHint="#808080"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/title_old_password"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:layout_width="181dp"
                    android:layout_height="42dp"
                    android:background="@drawable/bg_password_field"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:hint="••••••••"
                        android:inputType="none"
                        android:textColorHint="#808080"
                        android:textSize="30dp" />

                    <ImageView
                        android:id="@+id/ivToggle"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_visibility_off" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile_picture"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:background="#ffffff">
        <!--email-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/title_email"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/edtMail"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_password_field"
            android:hint="erikle@gmail.com"
            android:textColorHint="#808080"
            android:textSize="15dp"
            android:inputType="text"
            android:paddingStart="12dp"/>

        <!--address-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/title_address"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_password_field"
            android:hint="12 lê văn việt, Thủ Đức"
            android:textColorHint="#808080"
            android:textSize="15dp"
            android:inputType="text"
            android:paddingStart="12dp"/>
        <!--gender-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/title_gender"
            android:textSize="13dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Male"
            app:boxBackgroundMode="none">

            <AutoCompleteTextView
                android:id="@+id/autoGender"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_password_field"
                android:fontFamily="@font/poppins"
                android:textSize="15dp"
                android:textColor="#808080"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!--address-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/title_dob"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/edtDOB"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_password_field"
            android:hint="12/07/2004"
            android:textColorHint="#808080"
            android:textSize="15dp"
            android:inputType="text"
            android:paddingStart="12dp"/>
    </LinearLayout>
    <!--view history-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0A7B41"
            android:padding="5dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_3star" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_order_history"
                android:fontFamily="@font/poppins_semibold_italic"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_marginStart="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#0A7B41"
            android:padding="5dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_3star" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_semibold_italic"
                android:text="@string/title_interested_events"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>