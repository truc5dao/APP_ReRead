<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <!-- NỀN GIAO DIỆN - PHẦN HEADER CỐ ĐỊNH -->
    <LinearLayout
        android:id="@+id/cartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- LOGO + THANH TÌM KIẾM + ICON -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_logo_white" />
        <!-- mỗi cái ImageView sẽ có onClick nữa nhưng tính sau -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SearchView
                android:id="@+id/searchBar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="120dp"
                android:background="@drawable/ic_largebar"
                android:iconifiedByDefault="false"
                android:searchIcon="@drawable/ic_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:queryBackground="@android:color/transparent"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="310dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="360dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">


        <!-- Nội dung bên trong ScrollView, ví dụ LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:transitionName="product_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgProduct">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constrainLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp">

                        <TextView
                            android:id="@+id/txtDiscountedPrice"
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="750.000 đ"
                            android:textColor="@color/darkred"
                            android:textSize="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/txtDiscountTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_discountedtag"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:text="-30%"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/txtDiscountedPrice"
                            app:layout_constraintStart_toEndOf="@+id/txtDiscountedPrice" />

                        <!-- Giá gốc (có gạch ngang) -->
                        <TextView
                            android:id="@+id/txtOriginalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/discount_line"
                            android:fontFamily="@font/poppins_light"
                            android:text="1.500.000 đ"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/txtDiscountedPrice"
                            app:layout_constraintTop_toBottomOf="@+id/txtDiscountedPrice" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="24dp"
                        android:src="@drawable/ic_share"
                        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/constraintLayout3" />

                    <ImageView
                        android:id="@+id/imgWishList"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/ic_wishlist"
                        android:layout_marginRight="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
                        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
                        app:layout_constraintEnd_toStartOf="@+id/imgShare"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">
                    <TextView
                        android:id="@+id/txtProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Khảo luận thứ hai về chính quyền"
                        android:textColor="#391319"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/txtProductDiscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="Quý độc giả đang lật giở những trang sách tiếng Việt của một trong những tác phẩm được xem là vĩ đại nhất của nền triết học chính trị và chính trị học nhân loại..."/>

                    <!-- Nút Show More / Show Less -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:fontFamily="@font/poppins"
                            android:textSize="17dp"
                            android:text="@string/titleShowMore"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toBottomOf="@+id/txtProductDiscription"/>
                        <ImageView
                            android:id="@+id/imgShowMoreDiscription"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_showmore"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="@+id/textView3"
                            app:layout_constraintEnd_toStartOf="@+id/textView3"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginRight="24dp">
                <ImageView
                    android:id="@+id/imgLargeBarGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/ic_largebar_green" />

                <ImageView
                    android:id="@+id/imgThreeStar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="17.5dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/ic_threestar"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/poppins_semibold_italic"
                    android:text="@string/titleRatingsAndReviews"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imgRatingsAndReviews"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="355dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_more_white" />
                <LinearLayout
                    android:id="@+id/reviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="0dp">

                    <!-- Row: Avatar + Name + Stars -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_avatar"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="8dp"
                            style="@style/Circular"
                            app:shapeAppearanceOverlay="@style/Circular"
                            app:layout_constraintBottom_toTopOf="@+id/view"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>


                        <LinearLayout
                            android:id="@+id/LinearLayout1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtCustomerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Erik Graff"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/imgStar1"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginEnd="0dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>
                                <ImageView
                                    android:id="@+id/imgStar2"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginEnd="0dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                                    app:layout_constraintEnd_toStartOf="@id/imgStar1"/>
                                <ImageView
                                    android:id="@+id/imgStar3"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginEnd="0dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                                    app:layout_constraintEnd_toStartOf="@id/imgStar2"/>
                                <ImageView
                                    android:id="@+id/imgStar4"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginEnd="0dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                                    app:layout_constraintEnd_toStartOf="@id/imgStar3"/>
                                <ImageView
                                    android:id="@+id/imgStar5"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_star"
                                    android:layout_marginEnd="0dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                                    app:layout_constraintEnd_toStartOf="@id/imgStar4"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Review content -->
                    <TextView
                        android:id="@+id/reviewText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins"
                        android:text="This book was assigned reading for the 'Social and Political Philosophy' class at Loyola University Chicago. It's a rewarding, yet easy, read. John Locke's Second Treatise has long been mentioned..."
                        android:paddingTop="8dp"
                        android:textSize="15dp"/>

                    <!-- Toggle text -->
                    <LinearLayout
                        android:id="@+id/btnShowMore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:paddingTop="8dp"
                            android:text="@string/titleShowMore"
                            android:textColor="@color/black"
                            android:textSize="17dp"/>

                        <ImageView
                            android:id="@+id/imgShowMore"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_showmore"
                            app:layout_constraintEnd_toStartOf="@+id/textView3"
                            app:layout_constraintTop_toTopOf="@+id/textView3" />
                    </LinearLayout>
                    <View
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />
                </LinearLayout>

            </FrameLayout>
            <!--pick for you -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green">

                <ImageView
                    android:id="@+id/imgLargeBar1"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_largebar" />

                <ImageView
                    android:id="@+id/imgStar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="17.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_star" />

                <TextView
                    android:id="@+id/txtBestSellers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="@font/poppins_semibold_italic"
                    android:text="@string/titlePickedForYou"
                    android:textColor="@color/green"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imgMorePickedForYou"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="355dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_more" />
                <!-- cái này là dùng cho cái phần hiển thị picked-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPickedList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:clipToPadding="false"
                    android:scrollbars="none" />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="60dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:background="@color/white"
                        android:padding="8dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imgProduct1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:transitionName="product_image" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txtProductName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins"
                            android:text="Trung Thành Duy Ái"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/cardView2"
                            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

                        <!-- Tag giảm giá -->
                        <TextView
                            android:id="@+id/txtDiscountedPrice1"
                            android:layout_width="85dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="750.000 đ"
                            android:textColor="@color/darkred"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="@+id/cardView2"
                            app:layout_constraintTop_toBottomOf="@+id/txtProductName1" />

                        <TextView
                            android:id="@+id/txtDiscountTag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_discountedtag"
                            android:fontFamily="@font/poppins"
                            android:paddingStart="6dp"
                            android:paddingTop="2dp"
                            android:paddingEnd="6dp"
                            android:text="-30%"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/txtDiscountedPrice1"
                            app:layout_constraintStart_toEndOf="@+id/txtDiscountedPrice1" />

                        <!-- Giá gốc (có gạch ngang) -->
                        <TextView
                            android:id="@+id/txtOriginalPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/poppins_light"
                            android:background="@drawable/discount_line"
                            android:text="1.500.000 đ"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/txtDiscountedPrice1"
                            app:layout_constraintTop_toBottomOf="@+id/txtDiscountedPrice1" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/btnChatbot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="30dp"
        android:padding="0dp"
        android:src="@drawable/ic_chatbot"
        android:elevation="8dp"
        android:contentDescription="Chatbot"
        android:clickable="true"
        android:focusable="true" />
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/skincolor"
            android:fontFamily="@font/poppins"
            android:text="@string/btnAddToCart"
            android:textColor="@color/green"
            app:cornerRadius="0dp"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuyNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
